<style>
    table {
        display: table;
        border-collapse: separate;
        box-sizing: border-box;
        border-spacing: 2px;
        border-color: grey;
        vertical-align: top;
    }

    th{
        font-weight: bold;
        border: 1px solid #c1c7d0;
        background: #f4f5f7;
        padding: 3px 4px 3px 4px;
        text-align: center;
        vertical-align: top;
    }

    td{
        border: 1px solid #c1c7d0;
        padding: 3px 4px 3px 4px;
        vertical-align: top;
    }
</style>

<h2>Summary: {{summary}}</h2>
<h4><a href="{{arcLink}}">See Event in OverOps</a></h4>
<table class="confluenceTable"><tbody>
<tr>
    <th class="confluenceTh">Application</th>
    <td class="confluenceTd">{{introducedByApplication}}</td>
</tr>
<tr>
    <th class="confluenceTh">Deployment</th>
    <td class="confluenceTd">{{introducedBy}}</td>
</tr>
<tr>
    <th class="confluenceTh">Server</th>
    <td class="confluenceTd">{{introducedByServer}}</td>
</tr>
<tr>
    <th class="confluenceTh">Location</th>
    <td class="confluenceTd">{{errorLocation.className}}.{{errorLocation.methodName}}:{{errorLocation.originalLineNumber}}</td>
</tr>
<tr>
    <th class="confluenceTh">First Seen</th>
    <td class="confluenceTd">{{firstSeen}} UTC</td>
</tr>
</tbody></table>

<h2>Stackframes:</h2>
{{#each stackFrames}}
    <div>
        {{className}}.{{methodName}}:{{originalLineNumber}}
    </div>
{{/each}}
<br/>
<br/>